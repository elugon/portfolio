---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/sections/Header";
import Hero from "../components/sections/Hero";
import About from "../components/sections/About";
import Experience from "../components/sections/Experience";
import Skills from "../components/sections/Skills";
import ContactMe from "../components/ContactMe";
import "../styles/globals.css";

const siteTitle = "Elu Gonzalez - IT Manager | Prompt Engineer";
const siteDescription = "IT Manager | Prompt Engineer con 12 años de experiencia. Dirijo el departamento de TI en MSI Studio, liderando equipos de desarrollo y optimizando soluciones en la nube (Azure, AWS) y modelos de IA. Especialista en Python, C#, TypeScript, GoLang y Vue.js. Creador de SEO Optimizer y más de 1100 contribuciones en GitHub.";
---

<BaseLayout title={siteTitle} description={siteDescription}>
  <div class="my-screen z-0 bg-surface p-2 text-white">
    <Header client:load />

    <section id="hero">
      <Hero />
    </section>

    <section id="about">
      <About client:visible />
    </section>

    <section id="experience">
      <Experience client:visible />
    </section>

    <section id="skills">
      <Skills client:idle />
    </section>


    <section id="contact">
      <ContactMe client:visible />
    </section>
  </div>
</BaseLayout>